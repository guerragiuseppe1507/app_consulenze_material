
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sign_up_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="it.uniba.di.sss1415.app_consulenze.RegistrazioneActivity">


    <!-- Registration Form -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/ll_padding">
        <!-- Name Label -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Signup"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp"/>

        <TextView android:id="@+id/reg_name_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_label" />
        <EditText android:id="@+id/reg_name_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="textPersonName"
            android:singleLine="true" />
        <!-- Surname Label -->
        <TextView android:id="@+id/reg_surname_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/surname_label" />
        <EditText android:id="@+id/reg_surname_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="textPersonName"
            android:singleLine="true"/>
        <!-- Specialization Label -->
        <TextView android:id="@+id/reg_specialization_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/specialties_label" />
        <Spinner android:id="@+id/specialties_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <!-- Provincia Label -->
        <TextView android:id="@+id/reg_province_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/province_label" />
        <EditText android:id="@+id/reg_province_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="text"
            android:singleLine="true"/>
        <!-- Numero --> <!-- DA CONTROLLARE -->
        <TextView android:id="@+id/reg_num_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_label" />
        <EditText android:id="@+id/reg_num_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="number"
            android:singleLine="true"/>
        <!-- Albo Label -->
        <TextView android:id="@+id/reg_albo_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/albo_label" />
        <EditText android:id="@+id/reg_albo_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="number"
            android:singleLine="true"/>
        <!--  Email Label -->
        <TextView android:id="@+id/reg_email_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_label"/>
        <EditText android:id="@+id/reg_email_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="textEmailAddress"
            android:singleLine="true"/>
        <!-- Password Label -->
        <TextView android:id="@+id/reg_password_label_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_label"/>
        <EditText android:id="@+id/reg_password_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/et_marginTop"
            android:inputType="textPassword"
            android:singleLine="true" />
        <!-- Register Button -->
        <Button android:id="@+id/btnRegister"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/btn_marginTop"
            android:text="@string/reg_btn"
            android:textSize="@dimen/login_link_text_size"
            android:textColor="@color/whiteText"
            android:elevation="5dp"/>
        <!-- Link to Login Screen -->

        <Button android:id="@+id/link_to_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/login_margin"
            android:gravity="center"
            android:text="@string/login_link"
            android:textSize="15dp"
            android:elevation="5dp"
            android:textColor="@color/whiteText"
            android:onClick="toLogin"/>

    </LinearLayout>
    <!-- Registration Form Ends -->
</ScrollView><!-- From: file:/C:/Users/Giuseppe/AndroidStudioProjects/app_consulenze_material/app/src/main/res/layout/sign_up.xml -->
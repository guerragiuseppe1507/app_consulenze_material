<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="it.uniba.di.sss1415.app_consulenze.Fragment.MessagesFragment">
    <View
        android:id="@+id/shadow"
        android:layout_width="fill_parent"
        android:layout_height="6dip"
        android:elevation="10dp"
        app:borderWidth="0dp"
        android:background="@drawable/drop_shadow"
        android:layout_below="@+id/sep"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="20dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/new_request_spec"
        android:id="@+id/specTextView"
        android:visibility="visible"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_height="2dp"
            android:background="@color/divider"></TextView>
        </LinearLayout>

        <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/specialtiesSpinner2"
        android:layout_below="@+id/specialties_label"
        android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/et_marginBottom"

            android:visibility="visible" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/new_request_operation"
            android:id="@+id/interTextView"
            android:visibility="visible"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/interTextViewLine"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/divider"
            android:layout_marginLeft="5dp"></TextView>
        </LinearLayout>

        <Spinner
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/interSpinner"
            android:layout_below="@+id/specialties_label"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/et_marginBottom"
            android:visibility="visible" />




    </LinearLayout>

    <Button

        android:text="@string/title_button_Search"
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/login_link_text_size"
        android:textColor="@color/whiteText"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>

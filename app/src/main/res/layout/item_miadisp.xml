<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/item_miadisp"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
            <TextView
                android:id="@+id/tvData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="disp"/>
            <TextView
                android:id="@+id/tvOraInizio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="disp"/>
            <TextView
                android:id="@+id/tvOraFine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="disp"/>
            <TextView
                android:id="@+id/tvIntervento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="disp"/>
            <TextView
                android:id="@+id/tvRipetizione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="disp"/>
            <TextView
                android:id="@+id/tvFineRipetizione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="disp"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/miaDispBtnEdit"
                android:src="@drawable/edit" />
        <TextView
            android:layout_width="fill_parent"
            android:id="@+id/selectedDispon"
            android:layout_height="10px"
            android:layout_weight="1"
            />

    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/login_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RATE TUTOR"
        android:id="@+id/textView"
        android:textColor="@color/whiteText"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="30dp">
        <TextView
            android:id="@+id/tvNomeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:paddingRight="10dp" />
        <TextView
            android:id="@+id/tvCognomeD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:paddingRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Score : "
            android:id="@+id/labelScoreTVD"
            android:paddingRight="5dp" />

        <TextView
        android:id="@+id/tvScoreD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/tvScoreAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  "/>


        </LinearLayout>

         <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
             android:paddingBottom="20dp"
             android:paddingTop="10dp">
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical" >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/emoticon_happy"
                    android:id="@+id/imageButtonHappy" />
                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="10dp"
                     android:id="@+id/happyTV"
                     />
           </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical" >
                 <ImageButton
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/emoticon_neutral"
                     android:layout_alignParentTop="true"
                     android:layout_toEndOf="@+id/imageButtonHappy"
                     android:id="@+id/imageButtonNeutral"/>
                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="10dp"
                     android:id="@+id/neutralTV"
                     />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical" >
                 <ImageButton
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/emoticon_sad"
                     android:layout_alignParentTop="true"
                     android:layout_toEndOf="@+id/imageButtonNeutral"
                     android:id="@+id/imageButtonSad"/>
                 <TextView
                     android:layout_width="fill_parent"
                     android:layout_height="10dp"
                     android:id="@+id/sadTV"
                     />
             </LinearLayout>







</LinearLayout>
</LinearLayout>




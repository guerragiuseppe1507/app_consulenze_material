<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app_consulenze_material">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name="it.uniba.di.sss1415.app_consulenze.activity.MainActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/app_name" >

        </activity>

        <activity
            android:name="it.uniba.di.sss1415.app_consulenze.activity.LoginActivity"
            android:noHistory="true"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustPan" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>
        <activity
            android:name="it.uniba.di.sss1415.app_consulenze.activity.RegistrazioneActivity"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/title_activity_registrazione" >

        </activity>

        <activity
            android:name="it.uniba.di.sss1415.app_consulenze.fragment.RichiesteFragment"
            android:noHistory="true"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:label="@string/title_activity_richieste" >

        </activity>
    </application>

</manifest>
